<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base App Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#1976D2</item>
        <item name="colorPrimaryDark">#1565C0</item>
        <item name="colorAccent">#7C3AED</item>
    </style>

    <!-- Navigation Drawer Style - Main style for NavigationView -->
    <style name="NavigationDrawerStyle" parent="Widget.MaterialComponents.NavigationView">
        <!-- Background color - WHITE -->
        <item name="android:background">#FFFFFF</item>

        <!-- Text appearance and colors -->
        <item name="itemTextAppearance">@style/NavigationItemTextAppearance</item>
        <item name="itemTextColor">@color/menu_item_text_color</item>

        <!-- Icon settings -->
        <item name="itemIconTint">@color/menu_item_icon_color</item>
        <item name="itemIconSize">24dp</item>

        <!-- Background for items -->
        <item name="itemBackground">@drawable/nav_item_background</item>

        <!-- Spacing -->
        <item name="itemHorizontalPadding">16dp</item>
        <item name="itemVerticalPadding">8dp</item>
        <item name="itemIconPadding">16dp</item>

        <!-- Shape -->
        <item name="itemShapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="itemShapeInsetStart">8dp</item>
        <item name="itemShapeInsetEnd">8dp</item>
        <item name="itemShapeInsetTop">4dp</item>
        <item name="itemShapeInsetBottom">4dp</item>
    </style>

    <!-- Text appearance for navigation items -->
    <style name="NavigationItemTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Shape appearance for menu items -->
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- Section header style (for group titles) -->
    <style name="NavigationDrawerSectionHeader">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#6B7280</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>