<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background -->
    <gradient
        android:startColor="#1976D2"
        android:endColor="#42A5F5"
        android:angle="270"/>

    <!-- Rounded corners -->
    <corners
        android:radius="12dp"/>

    <!-- Optional border -->
    <stroke
        android:width="1dp"
        android:color="#1565C0"/>

    <!-- Inner padding -->
    <padding
        android:left="12dp"
        android:top="10dp"
        android:right="12dp"
        android:bottom="10dp"/>
</shape>
