<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Feeder Name Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="6dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FEEDER NAME"
                android:textColor="@color/text_secondary"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFeederName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="F01-VENKATAPUR RURAL"
                android:textColor="@color/text_primary"
                android:textSize="11sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color" />

        <!-- Feeder Code Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="6dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FEEDER CODE"
                android:textColor="@color/text_secondary"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFeederCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="122161039K"
                android:textColor="@color/text_primary"
                android:textSize="11sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color" />

        <!-- Feeder Category Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="6dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FEEDER CATEGORY"
                android:textColor="@color/text_secondary"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFeederCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="NJY"
                android:textColor="@color/text_primary"
                android:textSize="11sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color" />

        <!-- Confirmation Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONFIRMATION"
                android:textColor="@color/text_secondary"
                android:textSize="11sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rgConfirmation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbYes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Yes"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/rbNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp" />
            </RadioGroup>

            <!-- Raise Ticket Button (Initially Visible since No is default) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRaiseTicket"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/orange_500"
                android:text="RAISE TICKET"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="gone"
                app:cornerRadius="20dp" />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>