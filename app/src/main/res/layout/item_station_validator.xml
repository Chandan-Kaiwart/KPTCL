<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@drawable/item_divider_background">

    <!-- Station Name -->
    <TextView
        android:id="@+id/tvStationName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:text="HORTHI_33"
        android:textColor="#333333"
        android:textSize="11sp"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Feeder Hourly Status -->
    <TextView
        android:id="@+id/tvFeederHourly"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="NOT STARTED"
        android:textColor="#666666"
        android:textSize="10sp" />

    <!-- Feeder Consumption Status -->
    <TextView
        android:id="@+id/tvFeederConsumption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="NOT STARTED"
        android:textColor="#666666"
        android:textSize="10sp" />

    <!-- Overall Status -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="NOT STARTED YET"
        android:textColor="#F44336"
        android:textSize="10sp"
        android:textStyle="bold" />

</LinearLayout>
